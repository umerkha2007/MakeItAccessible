{
  "manifest_version": 3,
  "name": "MakeItAccessible",
  "version": "1.0.0",
  "description": "A free, open-source, and privacy-first Chrome extension for accessible web browsing",
  "permissions": [
    "activeTab",
    "storage",
    "tts",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/logo 16 x 16.png",
      "32": "assets/icons/logo 32 x 32.png",
      "48": "assets/icons/logo 48 x 48.png",
      "128": "assets/icons/logo 128 x 128.png"
    }
  },
  "icons": {
    "16": "assets/icons/logo 16 x 16.png",
    "32": "assets/icons/logo 32 x 32.png",
    "48": "assets/icons/logo 48 x 48.png",
    "128": "assets/icons/logo 128 x 128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/accessibility.js",
        "content/visual-enhancements.js",
        "content/audio-features.js",
        "content/reader-view.js"
      ],
      "css": ["content/styles.css"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options/options.html",
  "commands": {
    "toggle-high-contrast": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Toggle high contrast mode"
    },
    "toggle-dark-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Toggle dark mode"
    },
    "increase-font-size": {
      "description": "Increase font size"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
